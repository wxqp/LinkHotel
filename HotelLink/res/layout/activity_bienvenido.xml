<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytBienvenidoParent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BienvendioActivity" >

    <ImageView
        android:contentDescription="@string/Desc_imgLogo"
        android:id="@+id/imgBienvenido"
        android:layout_width="290dp"
        android:layout_height="215dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />
    
    <TextView
        android:id="@+id/lblDeslice"
        android:textSize="13sp"
		android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deslice_su_tarjeta" />

    <ImageView
        android:contentDescription="@string/Desc_imgHotel"
        android:id="@+id/imgHotel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:src="@drawable/hotel" />
    
</LinearLayout>