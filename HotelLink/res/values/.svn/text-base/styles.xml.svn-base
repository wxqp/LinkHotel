<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
          -->
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">#000000</item>
    </style>
        
     <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="background">@android:color/white</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
           parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#000000</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
    <!-- Button styles -->
    <style name="MyButton" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/dw_greenbutton</item>
    </style>
    
    <style name="GreenButton_Style" parent="MyButton">
        <item name="android:background">@drawable/dw_greenbutton</item>
    </style>
    
    <style name="BlackGreenButton_Style" parent="MyButton">
        <item name="android:background">@drawable/dw_darkgreenbutton</item>
    </style>
    
    <style name="OrangeButton_Style" parent="MyButton">
        <item name="android:background">@drawable/dw_btn_orange</item>
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/Background</item>
 		<item name="android:buttonStyle" >@style/MyButton</item>    
    </style>    
    
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="BreadCrumbsBar">
        <item name="android:background">@color/BlueBreadCrumbsBackgroud</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
	</style>
	<style name="BreadCrumbsButton" parent="MyButton">
	    <item name="android:background">@drawable/dw_btn_blue</item>
	    <item name="android:paddingLeft">15dp</item>
	    <item name="android:paddingRight">15dp</item>
	    <item name="android:layout_marginRight">2dp</item>
	</style>
</resources>
